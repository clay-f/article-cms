<article>
  <div class="article-list">
    <% if !@articles.blank? %>
        <div class="list-group">
          <% @articles.each do |article| %>
                <%= link_to truncate(article.title, length: 30), article, class: "list-group-item list-group-item-action article_title text-center", target: :_self %>
          <% end %>
        </div>
    <% else %>
      <div class="well">
        <p>what? :) </p>
       </div>
    <% end %>
  </div>
</article>
<div class="article-footer">
  <br>
  <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %>
  </div>
</div>