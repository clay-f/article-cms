<%= simple_form_for @article, html: { multipart: true } do |f| %>
    <%= f.input :title %>
    <%= f.select :catalog_id, @catalog %>
    <%=	f.input :avatar  %>
    <div class="form-group">
        <%= f.text_area :body, class: "form-control", rows: "15" %>
    </div>
    <%= f.button :submit %>
<% end %>
