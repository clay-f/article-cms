<section>
  <ul>
    <% @messages_list.each do |message| %>
      <li><%= message.body %></li>
    <% end %>
  </ul>
</section>
<br>
<section class="card">
  <div class="card-body">
    <%= form_for([current_user, Message.new]) do |f| %>
      <%= f.text_field :body, placeholder: "快速回复: "%>
      <%= f.hidden_field :receive_name, value: @message.user.id %>
      <%= f.submit :'发送'%>
    <% end %>
  </div>
</section>