<%= form_for [@article, @article.comments.new], remote: true, authenticity_token: true do |f| %>
  <div>
    <%= image_tag(current_user.avatar(:thumb), size: '30x30') %>:
    <%= f.text_area :description, cols: 40, placeholder: "写下你的评论..."  %>
  </div>
  <input type="hidden" name="title_id" id="article_id" value="<%= @article.id %>">
  <div class="clearfix">
    <div class="left-comment">
      <p class="text-muted">ctrl+return</p>
    </div>
    <%= button_tag "Cancel", type: :reset, class: "btn" %>
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>